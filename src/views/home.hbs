<div>HOme</div>
<div class='mt-4'>
    <div class='row'>
        {{#each courses}}
            <div class='col-sm-6 col-lg-4'>
                <div class='card'>
                    <img class='cart-img-top' src='{{this.image}}' alt='card image top' />
                    <div class='card-body'>
                        <h5 class='card-title'>{{this.name}}</h5>
                        <p class='card-text'>{{this.description}}</p>
                        <a href='/courses/{{this.slug}}' class='btn btn-primary'>Go somewhere</a>
                    </div>
                </div>
            </div>
        {{/each}}
    </div>
</div>